{
  "name": "@arizonatribe/advanced-nodejs-server",
  "version": "1.0.0",
  "description": "Project accompanying the Udemy Advanced NodeJs course",
  "main": "server/src/index.js",
  "private": true,
  "license": "MIT",
  "scripts": {
    "format": "eslint server/src --fix",
    "lint": "eslint server/src",
    "prepare": "npm run build",
    "server": "nodemon server/src/index.ts --ignore tests | pino-pretty",
    "start": "node server/lib/index.js",
    "client": "npm run start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build:server": "tsc --project tsconfig.build.json",
    "build:client": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "build": "npm run build:server && npm run build:client",
    "test": "jest"
  },
  "authors": [
    "Stephen Grider",
    "David Nunez <arizonatribe@gmail.com>"
  ],
  "dependencies": {
    "aws-sdk": "^2.188.0",
    "compression": "^1.7.4",
    "cookie-session": "^2.0.0",
    "dotenv": "^16.0.0",
    "envalid": "^7.3.1",
    "express": "^4.17.3",
    "helmet": "^5.1.0",
    "mongoose": "^6.0.0",
    "passport": "^0.3.2",
    "passport-google-oauth20": "^2.0.0",
    "pino": "^8.1.0",
    "redis": "^4.0.0",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@jest/types": "^28.1.3",
    "@types/compression": "^1.7.2",
    "@types/cookie-session": "^2.0.44",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.0.0",
    "@types/passport": "^1.0.9",
    "@types/passport-google-oauth20": "^2.0.11",
    "@types/puppeteer": "^5.4.6",
    "@types/uuid": "^8.3.4",
    "@vanillas/eslint-config": "^1.1.1",
    "concurrently": "^7.2.2",
    "eslint": "^8.0.0",
    "jest": "^28.1.3",
    "migrate-mongoose": "^3.2.2",
    "nodemon": "^2.0.7",
    "path-parser": "^2.0.2",
    "pino-pretty": "^8.1.0",
    "puppeteer": "^1.0.0",
    "ts-jest": "^28.0.6",
    "ts-node": "^10.7.0",
    "typescript": "~4.5.2"
  }
}
